{
  "name": "your-app",
  "version": "1.0.0",
  "description": "Your App Description",
  "main": "backend/main.js",
  "scripts": {
    "start": "npm --prefix backend start & npm --prefix frontend start",
    "build": "npm --prefix backend install && npm --prefix frontend install && npm --prefix frontend run build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.your-app.namespace",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "backend/**/*",
      "node_modules/**/*"
    ],
    "asarUnpack": [
      "backend/node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  },
  "devDependencies": {
    "electron": "^25.1.0",
    "electron-builder": "^23.6.0"
  }
}
